{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "experimentalDecorators": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true, // consider toggling if you need to investigate errors coming from within a package
    "outDir": "build",
    "lib": ["ESNext", "DOM"],
    "types": ["node", "google-apps-script"]
  },
  "include": ["src/*", "src/**/*"],
  "exclude": ["node_modules"],
  "files": ["src/index.ts"]
}
